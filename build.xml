<?xml version="1.0" encoding="UTF-8"?>
<project name="group7calendar" default="all">
  
  
  <property file="build.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.ane"/>
    <include name="*.zip"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  <!-- Modules -->
  
  
  <!-- Module Group7Calendar -->
  
  <dirname property="module.group7calendar.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.group7calendar" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.group7calendar" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.group7calendar" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.group7calendar" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="group7calendar.output.dir" value="${module.group7calendar.basedir}/build/production/Group7Calendar"/>
  <property name="group7calendar.testoutput.dir" value="${module.group7calendar.basedir}/build/test/Group7Calendar"/>
  
  <path id="group7calendar.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="group7calendar.module.production.classpath">
    <path refid="${module.jdk.classpath.group7calendar}"/>
  </path>
  
  <path id="group7calendar.runtime.production.module.classpath">
    <pathelement location="${group7calendar.output.dir}"/>
  </path>
  
  <path id="group7calendar.module.classpath">
    <path refid="${module.jdk.classpath.group7calendar}"/>
    <pathelement location="${group7calendar.output.dir}"/>
  </path>
  
  <path id="group7calendar.runtime.module.classpath">
    <pathelement location="${group7calendar.testoutput.dir}"/>
    <pathelement location="${group7calendar.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.group7calendar">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.group7calendar">
    <patternset refid="excluded.from.module.group7calendar"/>
  </patternset>
  
  <path id="group7calendar.module.sourcepath">
    <dirset dir="${module.group7calendar.basedir}">
      <include name="com/NKU/group7calendar"/>
      <include name="com"/>
      <include name="com/NKU"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.group7calendar" depends="compile.module.group7calendar.production,compile.module.group7calendar.tests" description="Compile module Group7Calendar"/>
  
  <target name="compile.module.group7calendar.production" description="Compile module Group7Calendar; production classes">
    <mkdir dir="${group7calendar.output.dir}"/>
    <javac destdir="${group7calendar.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.group7calendar}/javac">
      <compilerarg line="${compiler.args.group7calendar}"/>
      <bootclasspath refid="group7calendar.module.bootclasspath"/>
      <classpath refid="group7calendar.module.production.classpath"/>
      <src refid="group7calendar.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.group7calendar"/>
    </javac>
    
    <copy todir="${group7calendar.output.dir}">
      <fileset dir="${module.group7calendar.basedir}/com/NKU/group7calendar">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.group7calendar.basedir}/com">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.group7calendar.basedir}/com/NKU">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.group7calendar.tests" depends="compile.module.group7calendar.production" description="compile module Group7Calendar; test classes" unless="skip.tests"/>
  
  <target name="clean.module.group7calendar" description="cleanup module">
    <delete dir="${group7calendar.output.dir}"/>
    <delete dir="${group7calendar.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.group7calendar" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.group7calendar" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>

  <target name="test" depends="all" description="build test"/>
</project>